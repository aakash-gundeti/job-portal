<section>
  <div class="container">
    <%if(message){%>
        <div class="text-danger"><%= message%></div>
    <%}%>
    <% if(jobs){ %>
      <div class="row py-5">
        <% jobs.forEach(job => { %>
          <div class="col-12 col-md-6 col-lg-3 mb-4">
            <div class="card bg-transparent h-100">
              <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title"><%= job.company_name %></h5>
                <div class="mb-3">
                  <p class="card-text mb-0">Role :-  <%= job.role %></p>
                  <p class="card-text my-2">Location :-  <%= job.location %></p>
                  <p class="card-text mb-0">Salary/Package :-  <%= job.salary %></p>
                </div>
                <div class="mb-3">
                  <% job.skills.forEach(skill => { %>
                    <button type="button" class="btn btn-outline-dark btn-sm mb-2"><%= skill %></button>
                  <%})%>
                </div>
                <a href="/job-details/<%=job.id%>" class="btn btn-outline-dark w-100">View details</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% }else{ %>
        <div class="text-center py-5">
            <%= errorMessage%>
        </div>
    <%}%>
  </div>
</section>
