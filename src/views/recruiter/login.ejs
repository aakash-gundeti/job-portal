<section class="d-flex flex-column justify-content-center align-items-center py-5">
  <h1>Recruiter Login</h1>
  <form action="/login" method="post" class="w-25 text-center mb-4">
    <div class="form-floating mb-3">
        <input type="email" class="form-control" id="email" name="email" placeholder="Email">
        <label for="email">Email</label>
    </div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
        <label for="password">Password</label>
    </div>
    <button class="btn btn-dark px-5 py-2 text-center">Login</button>
  </form>
  <div>Dont have an account? <a href="/register" class="text-gray">Register here</a></div>
  <% if(errorMessage){ %>
    <div class="alert alert-danger" role="alert">
        <%= errorMessage %>
    </div>
  <% } %>
</section>
